pipeline {
    agent any 

    stages {
        stage('Build') {
            steps {
                script {
                    // Simulating a build step
                    echo 'Building...'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Simulating a test step
                    echo 'Running tests...'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    // Simulating a deployment step
                    echo 'Hello World!'
                }
            }
        }
    }
}
